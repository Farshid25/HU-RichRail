<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.112"
      fx:controller="fxmlController.RichRailController">
    <HBox spacing="20.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label maxHeight="1.7976931348623157E308" text="Select train"/>
        <ComboBox fx:id="trainCombo" prefWidth="200.0"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button mnemonicParsing="false" text="Add train"/>
    </HBox>
    <Separator/>
    <Label text="Train" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
        </padding>
    </Label>
    <Separator/>
    <HBox spacing="20.0">
        <padding>
            <Insets bottom="0.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label maxHeight="1.7976931348623157E308" prefWidth="60.0" text="Name"/>
        <TextField prefWidth="200.0"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button mnemonicParsing="false" text="Delete train"/>
    </HBox>
    <HBox spacing="20.0">
        <padding>
            <Insets bottom="0.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label maxHeight="1.7976931348623157E308" prefWidth="60.0" text="Wagon"/>
        <ChoiceBox prefWidth="200.0"/>
    </HBox>
    <HBox spacing="20.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Button mnemonicParsing="false" text="Edit wagon">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </Button>
        <Button mnemonicParsing="false" text="Delete wagon"/>
        <VBox.margin>
            <Insets left="80.0"/>
        </VBox.margin>
    </HBox>
    <HBox spacing="20.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0"/>
        </padding>
        <Button mnemonicParsing="false" text="Add wagon"/>
        <VBox.margin>
            <Insets left="80.0"/>
        </VBox.margin>
    </HBox>
    <Separator/>
    <HBox spacing="20.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="openTerminalButton" mnemonicParsing="false" text="&gt;_ Open terminal"/>
        <Pane HBox.hgrow="ALWAYS"/>
    </HBox>
</VBox>
